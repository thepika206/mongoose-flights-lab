<link rel="stylesheet" href="/stylesheets/flights/new.css">
<%- include('../partials/nav') %>

<main>
  <h1><%= title %></h1>
  <form id="new-form" action="/flights" method="POST">
    <label for="airline-input">Airline:</label>
    <input type="text" id="airline-input" name="airline">
    <label for="airport-input">Airport:</label>
    <input type="text" id="airport-input" name="airport">
    <label for="flightNo-input">Flight Number:</label>
    <input type="text" id="flightNo-input" name="flightNo">
    <label for="departs-input">Departs:</label>
    <input type="text" id="departs-input" name="departs">
    <button type="submit">Add Flight</button>
  </form>
</main>

