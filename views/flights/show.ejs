<%- include('../partials/html-head') %> 
<link rel="stylesheet" href="/stylesheets/flights/show.css">
<%- include('../partials/nav') %>

<main>
  <h1><%= title %></h1>
  <section id="flight-details">
    <form action="/flights/<%= flight._id %>/edit">
      <button>Edit Flight Details</button>
    </form>
    <table>
      <tbody>
        <tr>
          <th>Departure Date:</th>
          <td><%= flight.departs %></td>
        </tr>
        <tr>
          <th>Airline:</th>
          <td><%= flight.airline %></td>
        </tr>
        <tr>
          <th>Flight Number:</th>
          <td><%= flight.flightNo %></td>
        </tr>
        <tr>
          <th>Destination Airport:</th>
          <td><%= flight.airport %></td>
        </tr>
      </tbody>
    </table>
  </section>
  <h2>Tickets</h2>
  <form action="/flights/<%= flight._id %>/edit">
    <label for="ticket-seat">Seat</label>
    <input type="text" id="ticket-seat" name="seat">
    <label for="ticket-price">Price</label>
    <input type="text" id="ticket-price" name="price">
    <button>Add Ticket</button>
  </form>
  <section id="tickets">
    <table>
      <thead>
        <th>Seat</th>
        <th>Price</th>
      </thead>
      <tbody>
        <% flight.tickets.forEach(ticket => { %>
          <td><%= ticket.seat %> </td>
          <td><%= ticket.price %> </td>
        <% }) %>
      </tbody>
    </table>
  </section>
</main>

<%- include('../partials/footer') %>